{
  "compileOnSave": false,
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "sourceMap": true,
    "declaration": false,
    "jsx": "react",
    "module": "ESNext",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "ES2015",
    "typeRoots": ["node_modules/@types"],
    "resolveJsonModule": true,
    "lib": ["es2017", "dom"],
    "paths": {
      "@app": ["./src/modules/app/index"],
      "@app/*": ["./src/modules/app/*"],
      "@core/*": ["./src/modules/core/*"],
      "@localization": ["./src/modules/localization/index"],
      "@localization/*": ["./src/modules/localization/*"],
      "@env": ["./src/environment.ts"],
      "@general/*": ["./src/modules/general/*"],
      "@router/*": ["./src/modules/router/*"],
      "@uikit": ["./src/modules/uikit/index"],
      "@uikit/*": ["./src/modules/uikit/*"],
      "@auth": ["./src/modules/auth/index"],
      "@auth/*": ["./src/modules/auth/*"],
      "@ui": ["./src/modules/ui/index"],
      "@ui/*": ["./src/modules/ui/*"],
      "@home": ["./src/modules/home/index"],
      "@home/*": ["./src/modules/home/*"],
      "@pages/*": ["./src/modules/pages/*"],
      "@pages": ["./src/modules/pages/index"],
      "@test-page": ["./src/modules/test-page/index"],
      "@test-page/*": ["./src/modules/test-page/*"],
      "@account": ["./src/modules/account/index"],
      "@account/*": ["./src/modules/account/*"]
    }
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "@types"]
}
